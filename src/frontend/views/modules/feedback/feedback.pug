div.aside( tabindex='-1' role='dialog' ng-controller='feedback')
  div.aside-dialog
    div.aside-content
      div.aside-header
        button.close(type='button' ng-click='$hide()') &times;
        h4.aside-title {{ 'Give a feedback' | translate }}
        form(name='feedbackFrom')
          div.aside-body
            div.alert.alert-danger(ng-show='error') {{ 'There was an error while sending your feedback. Please try again.' | translate }}
            textarea.form-control(ng-model='feedback' ng-hide='feedbackTask.done' placeholder="{{ 'We love feedback' | translate }}" + "\u2026" ng-change='error = false')
              div(ng-show='feedbackTask.done') {{ 'Your feedback has been sent' | translate }}
              div.aside-footer
                button.btn.btn-default(type='button' ng-click='$hide()') {{ 'Close' | translate }}
                button.btn.btn-primary(type='button' ng-click='submit()' ng-disabled='feedbackTask.running || !feedback.length' ng-hide='feedbackTask.done') {{feedbackButton.label}}
