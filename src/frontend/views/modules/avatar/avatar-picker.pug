.avatar-picker-button
  .btn-group.btn-group-justified
    span.btn.btn-primary.btn-file
      i.mdi.mdi-upload
      | {{ 'Pick an image' | translate }}
      input(type="file", accept="image/*", load-button)
.avatar-picker-error
.row.avatar-picker-preview
  .col-xs-12.flex-horizontal-centered
    div(ng-show='!image.selected')
      img(width="128", height="128", ng-src='{{avatarPlaceholder}}', alt="{{ 'Avatar' | translate }}")
    div(ng-show='image.selected')
      .img-preview
        a(data-ng-click='removeSelectedImage()', href='')
          i.mdi.mdi-close
        canvas(width="128", height="128", id="preview", img-preview)
  .col-xs-12.flex-horizontal-centered(ng-show='image.selected')
    .hidden-md.hidden-sm.hidden-lg
      img-loaded(optimal-size="190")
    .hidden-xs
      img-loaded(optimal-size="380")
