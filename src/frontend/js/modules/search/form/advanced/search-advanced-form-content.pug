.search-advanced-form-content(role="dialog")
  .search-advanced-form-content-content
    form(name="searchForm" role="form", novalidate="true")
      .search-advanced-form-content-body
        .search-advanced-form-content-form(ng-include="provider.searchTemplateUrl")

      .search-advanced-form-content-footer
        .actions
          button.btn.btn-primary(
            type='button',
            title="{{ 'Search' | translate }}",
            ng-click="search(); $hide();",
            ng-disabled="searchForm.$invalid"
          ) {{ 'Search' | translate }}