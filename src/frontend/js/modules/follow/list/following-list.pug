.follow.col-xs-12.col-md-10.nopadding
  .listview.lv-bordered
    infinite-list.lv-body(load-more-elements='loadNext()')
      .lv-item.media(ng-repeat="user in users")
        member-display(member="user")
      .list-empty(ng-if="!users.length && infiniteScrollCompleted")
        i.mdi.mdi-account-multiple
        .message(ng-if="isCurrentUser") {{ 'You do not follow anyone' | translate }}
        .message(ng-if="!isCurrentUser") {{ '%s does not follow anyone' | translate:userDisplayName }}
