.follow-card.text-center
  ul
    li(ng-if='user.followers === 1') {{user.followers}} {{ 'follower' | translate }}
    li(ng-if='user.followers !== 1') {{user.followers}} {{ 'followers' | translate }}
    li(ng-if='user.followings === 1') {{user.followings}} {{ 'following' | translate }}
    li(ng-if='user.followings !== 1') {{user.followings}} {{ 'followings' | translate }}
  follow-button.text-center(ng-if='!me', user='user', following='user.following', on-followed='addFollower()', on-unfollowed='removeFollower()')
