.modal.esn-shortcuts-sheet(tabindex="-1", role="dialog", ng-init="$ctrl.$onInit()")
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-label="{{ 'Close' | translate }}", ng-click="$hide()")
          span(aria-hidden='true') Ã—
        h4.modal-title {{ 'Keyboard shortcuts' | translate }}
          small(ng-if="$ctrl.isFiltered")
            a(ng-click="$ctrl.showAll()") ({{ 'Show all' | translate }})
      .modal-body
        div(ng-repeat="category in $ctrl.filteredCategories | orderBy: 'id'")
          dl.dl-horizontal
            dt
            dd
              h4 {{ ::category.name | esnI18n }}
          div(ng-repeat="shortcut in category.shortcuts")
            dl.dl-horizontal
              dt
                kbd {{::shortcut.comboAsText}}
              dd {{ ::shortcut.description | esnI18n }}
          div(ng-repeat="subCategory in category.subCategories | orderBy: 'id'")
            dl.dl-horizontal
              dt
              dd
                h5 {{ ::subCategory.name | esnI18n }}
            div(ng-repeat="shortcut in subCategory.shortcuts")
              dl.dl-horizontal
                dt
                  kbd {{::shortcut.comboAsText}}
                dd {{ ::shortcut.description | esnI18n }}
